<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<!DOCTYPE app [
 <!ENTITY name "SamToJson">
 <!ENTITY package "com.github.lindenb.jvarkit.tools.misc">
]>
<app xmlns="http://github.com/lindenb/jvarkit/" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:svg="http://www.w3.org/2000/svg" app="&name;" package="&package;" __placeholder__="1">
<description>Convert a SAM input to JSON.</description>
<input type="sam"/>

<options>
	<option name="print_header" opt="H" longopt="header" type="boolean" default="false">
		<description>don't print SAM HEADER</description>
	</option>
	<option name="disable_readName" opt="name" longopt="name" type="boolean" default="false">
		<description>do not print read name</description>
	</option>
	<option name="disable_atts" opt="atts" longopt="atts" type="boolean" default="false">
		<description>do not print attributes</description>
	</option>
	<option name="expflag" opt="flag" longopt="flag" type="boolean" default="false">
		<description>expand SAm Flags</description>
	</option>
	<option name="excigar" opt="cigar" longopt="cigar" type="boolean" default="false">
		<description>expand cigar</description>
	</option>
</options>

<documentation>

</documentation>

<!-- __PLACEHOLDER__ --></app>
