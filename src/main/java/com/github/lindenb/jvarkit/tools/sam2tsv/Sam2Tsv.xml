<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<!DOCTYPE app [
 <!ENTITY name "Sam2Tsv">
 <!ENTITY package "com.github.lindenb.jvarkit.tools.sam2tsv">
]>
<app xmlns="http://github.com/lindenb/jvarkit/" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:svg="http://www.w3.org/2000/svg" app="&name;" package="&package;" __placeholder__="1">
<description>Prints the SAM alignments as a TAB delimited file.</description>
<input type="sam"/>

<options>
	<option name="printAlignment" type="boolean" opt="A" longopt="printAlignments" >
		<description>clip read to their PCR fragments. see https://github.com/lindenb/jvarkit/wiki/PcrClipReads</description>
	</option>
	<option name="refFile" type="input-file" opt="r" longopt="REF" argname="REFERENCE">
		<description>indexed reference file</description>
	</option>
</options>


<!-- __PLACEHOLDER__ -->


</app>
