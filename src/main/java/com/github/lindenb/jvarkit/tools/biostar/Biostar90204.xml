<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<!DOCTYPE app [
 <!ENTITY name "Biostar90204">
 <!ENTITY package "com.github.lindenb.jvarkit.tools.biostar">
]>
<app xmlns="http://github.com/lindenb/jvarkit/" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:svg="http://www.w3.org/2000/svg" app="&name;" package="&package;" __placeholder__="1">
<description>Bam version of linux split. See also http://www.biostars.org/p/90204/</description>
<input type="sam"/>

<options>
	<option name="record_per_file" type="long" opt="n" longopt="count" argname="COUNT" default="-1L">
		<description>NUMBER of SAM RECORD per output file. REQUIRED</description>
	</option>
	<option name="prefix" type="string" opt="p" longopt="prefix" argname="PREFIX" default="_splitbam">
		<description>output file prefix</description>
	</option>
	<option name="suffix_length" type="int" opt="a" longopt="suffixlength" argname="LENGTH" default="2">
		<description>suffix length</description>
	</option>
	<option name="manifestFile" type="output-file" opt="M" longopt="manifest" argname="FILE" >
		<description>manifest file</description>
	</option>
	
</options>

<!-- __PLACEHOLDER__ -->
</app>
