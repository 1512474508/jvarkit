<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<!DOCTYPE app [
 <!ENTITY name "FastqToFasta">
 <!ENTITY package "com.github.lindenb.jvarkit.tools.misc">
]>
<app xmlns="http://github.com/lindenb/jvarkit/" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:svg="http://www.w3.org/2000/svg" app="&name;" package="&package;" __placeholder__="1">
<description>convert Fastq to Fasta</description>
<output type="fasta"/>

<options>
	<option name="fastaLineLen" type="int" opt="N" longopt="size" default="50">
		<description>fasta line length</description>
	</option>
	<option name="trim_after_space" type="boolean" opt="b" longopt="trim" default="false">
		<description>trim fasta header after space</description>
	</option>
</options>

<!-- __PLACEHOLDER__ -->

</app>
