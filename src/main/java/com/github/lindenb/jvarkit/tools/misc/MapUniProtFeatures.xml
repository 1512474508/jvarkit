<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<!DOCTYPE app [
 <!ENTITY name "MapUniProtFeatures">
 <!ENTITY package "com.github.lindenb.jvarkit.tools.misc">
]>
<app xmlns="http://github.com/lindenb/jvarkit/" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:svg="http://www.w3.org/2000/svg" app="&name;" package="&package;" __placeholder__="1">
<description>map uniprot features on reference genome</description>


<options>
	<option name="kgUri" type="string" opt="k" longopt="knownGene"  default="http://hgdownload.cse.ucsc.edu/goldenPath/hg19/database/knownGene.txt.gz">
		<description>UCSC KnownGene data URI/File. should look like http://hgdownload.cse.ucsc.edu/goldenPath/hg19/database/knownGene.txt.gz . Beware chromosome names are formatted the same as your REFERENCE</description>
	</option>
	<option name="UNIPROT" type="string" opt="u" longopt="uniprot"  default="ftp://ftp.uniprot.org/pub/databases/uniprot/current_release/knowledgebase/complete/uniprot_sprot.xml.gz">
		<description> Uniprot.xml.gz URL/File.</description>
	</option>
	<option name="REF" type="input-file" opt="R" longopt="ref" >
		<description>indexed Reference file</description>
	</option>
</options>


<!-- __PLACEHOLDER__ -->
</app>
