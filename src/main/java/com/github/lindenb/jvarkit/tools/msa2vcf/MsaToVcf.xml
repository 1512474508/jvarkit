<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<!DOCTYPE app [
 <!ENTITY name "MsaToVcf">
 <!ENTITY package "com.github.lindenb.jvarkit.tools.msa2vcf">
]>
<app xmlns="http://github.com/lindenb/jvarkit/" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:svg="http://www.w3.org/2000/svg" app="&name;" package="&package;" __placeholder__="1">
<description>Getting a VCF file from a CLUSTAW or a FASTA alignment. </description>
<input type="stdin-or-one"/>
<output type="vcf"/>

<options>
	<option name="REF" opt="R" longopt="REF" type="string" default="chrUn">
		<description>reference name used for the CHROM column. Optional</description>
	</option>
	<option name="consensusRefName" opt="c" longopt="consensus" type="string" >
		<description>ruse this sequence as CONSENSUS</description>
	</option>
	
	<option name="outFasta" opt="f" longopt="fasta" type="output-file" >
		<description> save computed fasta sequence in this file.</description>
	</option>
	<option name="haploid" opt="m" longopt="haploid" type="boolean" default="false" >
		<description>haploid output</description>
	</option>
	<option name="printAllSites" opt="a" longopt="allsites" type="boolean" default="false" >
		<description>print all sites</description>
	</option>
</options>

<documentation>
<h:b>Deprecated</h:b>: use <h:a>https://github.com/sanger-pathogens/snp_sites</h:a>

</documentation>
<!-- __PLACEHOLDER__ -->
</app>
