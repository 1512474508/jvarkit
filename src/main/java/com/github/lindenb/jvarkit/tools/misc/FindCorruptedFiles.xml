<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<!DOCTYPE app [
 <!ENTITY name "FindCorruptedFiles">
 <!ENTITY package "com.github.lindenb.jvarkit.tools.misc">
]>
<app xmlns="http://github.com/lindenb/jvarkit/" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:svg="http://www.w3.org/2000/svg" app="&name;" package="&package;" __placeholder__="1">
<description>Reads filename from stdin and prints corrupted NGS files (VCF/BAM/FASTQ/BED/TBI/BAI)</description>
<input type="stdin-or-one"/>

<options>
	<option name="validationStringencyStr" type="string" opt="V" longopt="stringency">
		<description>validation stringency. Optional.</description>
	</option>
	<option name="NUM" type="long" opt="N" longopt="position" default="1000L">
		<description>Number of records to test in each file (BAM, FASTQ, VCF...). Optional</description>
	</option>
	<option name="emptyIsError" type="boolean" opt="E" longopt="empty_is_error" >
		<description>empty file is an error.</description>
	</option>
</options>



<arguments> </arguments><!-- __PLACEHOLDER__ --></app>
