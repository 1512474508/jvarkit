<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<!DOCTYPE app [
 <!ENTITY name "WorldMapGenome">
 <!ENTITY package "com.github.lindenb.jvarkit.tools.circular">
]>
<app xmlns="http://github.com/lindenb/jvarkit/" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:svg="http://www.w3.org/2000/svg" app="&name;" package="&package;" __placeholder__="1">
<description>Genome/Map of the world. Input is a BED file: chrom/start/end/country.</description>
<input type="stdin-or-one"/>
<output type="xml"/>



<options>
	<option name="faidx" type="input-file" opt="R" longopt="REF" >
		<description id="faidx"/>
	</option>
	<option name="svgMapUri" type="string" opt="u" longopt="mapuri" default="http://upload.wikimedia.org/wikipedia/commons/7/76/World_V2.0.svg">
		<description>URL world SVG map</description>
	</option>
	<option name="listCountries" type="boolean" opt="T" longopt="listCountries" default="false">
		<description>Just list countries and exit.</description>
	</option>
	<option name="squareSize" type="int" opt="w" longopt="squareSize" default="1000">
		<description>square size</description>
	</option>
</options>

<documentation>
<h:h3>Example</h:h3>

<h:pre class=""><!-- head map.bed

1	141535	143008	taiwan
1	564463	570304	china
1	564463	570304	china
1	564463	564813	canada
1	564510	569779	estonia
1	564510	569779	estonia
1	564510	569170	germany
1	564633	569139	italy
1	564660	565200	iran
1	564733	569130	brazil
1	564776	569431	mexico
 --></h:pre>
 
 
<h:pre class="bash"><!-- $  cat map.bed |\
     java -jar dist/worldmapgenome.jar \
     -u World_V2.0.svg \
     -w 2000 -o ~/ouput.jpg \
     -R human_g1k_v37.fasta
 --></h:pre>
 
