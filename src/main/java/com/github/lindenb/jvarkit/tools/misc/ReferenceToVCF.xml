<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<!DOCTYPE app [
 <!ENTITY name "ReferenceToVCF">
 <!ENTITY package "com.github.lindenb.jvarkit.tools.misc">
]>
<app xmlns="http://github.com/lindenb/jvarkit/" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:svg="http://www.w3.org/2000/svg" app="&name;" package="&package;" __placeholder__="1">
<description>Creates a VCF containing all the possible substitutions from a Reference Genome</description>
<output type="vcf"/>


<options>
	<option name="bedFile" type="input-file" opt="L" longopt="bed" >
		<description>limit to this BED file</description>
	</option>
	<option name="deletion_size" type="int" opt="d" longopt="deletion" default="0" >
		<description>generate deletions (size).</description>
	</option>
	<option name="insertion_size" type="int" opt="i" longopt="insertion" default="0" >
		<description>generate insertion (size).</description>
	</option>
	<option name="group_alts" type="boolean" opt="g" longopt="groupalt" >
		<description>group ALT for same REF.</description>
	</option>
</options>


<!-- __PLACEHOLDER__ -->
</app>
