<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<!DOCTYPE app [
 <!ENTITY name "CoverageNormalizer">
 <!ENTITY package "com.github.lindenb.jvarkit.tools.misc">
]>
<app xmlns="http://github.com/lindenb/jvarkit/" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:svg="http://www.w3.org/2000/svg" app="&name;" package="&package;" __placeholder__="1">
<description>normalize BAM coverage</description>
<snippet id="sorting-collection"/>
<input type="sam"/>
<output type="sam"/>

<arguments>
	<option name="window_size" type="int" opt="w" longopt="size" default="100">
		<description>sliding window size</description>
	</option>
	<option name="window_shift" type="int" opt="s" longopt="shift" default="50">
		<description>sliding window size</description>
	</option>
</arguments>


<!-- __PLACEHOLDER__ -->
</app>
