<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<!DOCTYPE app [
 <!ENTITY name "Biostar94573">
 <!ENTITY package "com.github.lindenb.jvarkit.tools.biostar">
]>
<app xmlns="http://github.com/lindenb/jvarkit/" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:svg="http://www.w3.org/2000/svg" app="&name;" package="&package;" __placeholder__="1">
<description>getting a VCF file from a CLUSTAW or FASTA alignment. See also http://www.biostars.org/p/94573/</description>
<input type="stdin-or-one"/>
<output type="vcf"/>


<options>
	<option name="REF" type="string" opt="R" longopt="REF" argname="NAME" default="chrUn">
		<description>reference name used for the CHROM column</description>
	</option>
	<option name="outFasta" type="output-file" opt="f" longopt="fasta" argname="FASTA" >
		<description>save computed fasta sequence in this file</description>
	</option>
	<option name="haploid" type="boolean" opt="m" longopt="haploid"  >
		<description>haploid outpout</description>
	</option>
	<option name="printAllSites" type="boolean" opt="a" longopt="allsites"  >
		<description>generate variant for all sites</description>
	</option>
	<option name="consensusRefName" type="string" opt="c" longopt="consensusname"  >
		<description>use this sequence as CONSENSUS</description>
	</option>
</options>


<!-- __PLACEHOLDER__ --></app>
